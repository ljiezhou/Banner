<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhou.banner.BannerViewPager
        android:id="@+id/banner_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/banner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titleBackground"
        android:padding="5dp"
        android:text="标题"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/banner_text_size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/banner_indicator_layout"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:background="@color/colorRed"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/banner_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/banner_title">

    </LinearLayout>

</android.support.constraint.ConstraintLayout>